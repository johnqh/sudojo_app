# =============================================================================
# Sudojo App Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# All variables prefixed with VITE_ are exposed to the client-side code.
# =============================================================================

# -----------------------------------------------------------------------------
# APP CONFIGURATION
# -----------------------------------------------------------------------------

# Application display name shown in the UI
VITE_APP_NAME=Sudojo

# Application domain (used for branding and links)
VITE_APP_DOMAIN=sudojo.com

# Company name for branding purposes
VITE_COMPANY_NAME=Sudobility

# Support email address for user inquiries
VITE_SUPPORT_EMAIL=support@sudojo.com

# -----------------------------------------------------------------------------
# API ENDPOINTS
# -----------------------------------------------------------------------------

# Main Sudojo API endpoint (solver traffic is routed through this)
# - Development: http://localhost:3000
# - Production: https://api.sudojo.com
VITE_SUDOJO_API_URL=https://api.sudojo.com

# -----------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these values from Firebase Console > Project Settings > General > Your apps
# https://console.firebase.google.com/

# Firebase API key for authentication
VITE_FIREBASE_API_KEY=

# Firebase authentication domain (typically: {project-id}.firebaseapp.com)
VITE_FIREBASE_AUTH_DOMAIN=

# Firebase project identifier
VITE_FIREBASE_PROJECT_ID=

# Firebase cloud storage bucket (typically: {project-id}.appspot.com)
VITE_FIREBASE_STORAGE_BUCKET=

# Firebase Cloud Messaging sender ID (for push notifications)
VITE_FIREBASE_MESSAGING_SENDER_ID=

# Firebase app identifier
VITE_FIREBASE_APP_ID=

# Firebase Analytics measurement ID (starts with G-)
VITE_FIREBASE_MEASUREMENT_ID=

# -----------------------------------------------------------------------------
# REVENUECAT CONFIGURATION
# -----------------------------------------------------------------------------
# Get these values from RevenueCat Dashboard > API Keys
# https://app.revenuecat.com/

# RevenueCat production API key (public key starting with 'rcb_')
# Used for in-app purchases and subscription management
VITE_REVENUECAT_API_KEY=

# RevenueCat sandbox API key (for development/testing)
# Used when VITE_DEV_MODE is true
VITE_REVENUECAT_API_KEY_SANDBOX=

# RevenueCat offering identifier
# The offering ID configured in RevenueCat dashboard
VITE_REVENUECAT_OFFER_ID=Sudojo

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------

# Enable development mode
# - "true": Uses sandbox RevenueCat keys, enables dev features
# - "false" or unset: Production mode
VITE_DEV_MODE=false

# Show performance monitor panel (debug tool)
# - "true": Displays FPS and memory stats overlay
# - "false" or unset: Hidden
VITE_SHOW_PERFORMANCE_MONITOR=false

# -----------------------------------------------------------------------------
# SOCIAL & MARKETING (Optional)
# -----------------------------------------------------------------------------

# Twitter/X handle for social links (without @)
VITE_TWITTER_HANDLE=

# Discord server invite link (full URL)
VITE_DISCORD_INVITE=

# URL for "Meet the Founder" or booking link (e.g., Calendly)
VITE_MEET_FOUNDER_URL=
